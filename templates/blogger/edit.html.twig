{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Blogger{% endblock %}

{% block body %}
{{ parent() }}
    
    <div class=" col-md-12" height="160">
    {% if blog.picture  is not null %}
    <img width="100" height="150" src="{{ asset('uploads/bloggerfotos/') }}{{ blog.picture }}" alt="post img" class="pull-left img-responsive thumb margin10 img-thumbnail">
    {% else %}
    <img width="100" src="{{ asset('uploads/bloggerfotos/') }}noimagen.jpg" alt="post img" class="pull-left img-responsive thumb margin10 img-thumbnail">
    {% endif %}
    </div>
    {{ form(form) }}
    
    
{% endblock %}